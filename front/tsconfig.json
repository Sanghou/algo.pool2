{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types","@/types"],
    "strict": true,
    "outDir": "./dist",
    "jsx":"react",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true, // false 설정 시 import * as react from "React"처럼..
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "@/*":[
        "src/*"
      ]
    },
  }
}